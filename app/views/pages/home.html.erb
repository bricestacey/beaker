<h1><%= t('.title') %></h1>

<% if signed_in? %>
  <p><%= t('.signed_in_as', email: current_user.email) %></p>
  <p><%= link_to t('.sign_out'), sign_out_path, method: :delete %></p>
<% else %>
  <p><%= link_to t('.sign_up'), new_user_path %></p>
  <p><%= link_to t('.sign_in'), new_session_path %></p>
<% end %>
